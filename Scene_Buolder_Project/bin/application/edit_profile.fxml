<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EditProfileController" prefWidth="1024" prefHeight="768" spacing="15" alignment="CENTER" style="-fx-background-color: #ffffff;">
    <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5a9bd4;" />
    <Label fx:id="usernameLabel" style="-fx-font-size: 14px; -fx-text-fill: #000000;" /> <!-- Dynamic label for username -->
    <TextField fx:id="firstNameField" promptText="First Name" style="-fx-background-color: #f0f8ff; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
    <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-background-color: #f0f8ff; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
    <PasswordField fx:id="passwordField" promptText="New Password" style="-fx-background-color: #f0f8ff; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
    <Button text="Save Changes" fx:id="saveProfileButton" style="-fx-background-color: #4682b4; -fx-text-fill: white;" onAction="#handleSaveProfile" />
</VBox>
