<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefWidth="500" prefHeight="500" spacing="15" alignment="CENTER" style="-fx-background-color: #ffffff;">
    <Label text="Your Shopping Cart" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5a9bd4;" />
    <TableView fx:id="cartTable" style="-fx-background-color: #f0f8ff; -fx-border-color: #4b9cd3;">
        <columns>
            <TableColumn text="Book Title" />
            <TableColumn text="Quantity" />
            <TableColumn text="Price" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button text="Update Cart" fx:id="updateCartButton" style="-fx-background-color: #4b9cd3; -fx-text-fill: white;" />
        <Button text="Checkout" fx:id="checkoutButton" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" />
    </HBox>
</VBox>
