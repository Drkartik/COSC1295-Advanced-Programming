<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500" prefWidth="500" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-padding: 40px; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4682b4;" text="Login" />
            <TextField fx:id="usernameField" promptText="Username" style="-fx-background-color: #e6f7ff; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: #e6f7ff; -fx-border-color: #4682b4; -fx-border-radius: 5;" />
            <Button fx:id="loginButton" style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-border-radius: 10;" text="Login" onAction="#handleLoginButtonAction" />
            <Text fx:id="createAccountLink" text="Create Account" style="-fx-text-fill: #4682b4; -fx-underline: true; -fx-font-size: 14px; -fx-cursor: hand;" onMouseClicked="#handleCreateAccountClick"/>
        </VBox>
    </center>
</BorderPane>
